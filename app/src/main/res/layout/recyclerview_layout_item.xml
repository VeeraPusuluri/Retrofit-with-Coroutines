<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/recyclerview_item_mcv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/recyclerview_item_img"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:padding="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/ic_launcher_foreground" />

            <TextView
                android:id="@+id/recyclerview_item_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/id"
                android:padding="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                style="@style/Theme.TextView"
                app:layout_constraintStart_toEndOf="@+id/recyclerview_item_img"
                app:layout_constraintTop_toTopOf="@+id/recyclerview_item_img" />

            <TextView
                android:id="@+id/recyclerview_item_title"
                android:layout_width="0dp"
                android:padding="8dp"
                android:layout_height="wrap_content"
                android:text="@string/title"
                style="@style/Theme.TextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/recyclerview_item_img"
                app:layout_constraintTop_toBottomOf="@+id/recyclerview_item_id" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>